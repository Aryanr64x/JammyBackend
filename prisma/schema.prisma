generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id Int @id @default(autoincrement())
  username String 
  email String @unique
  password String 
  create_at DateTime @default(now())
  jams Jam[]
}



model Jam{
  id Int @id @default(autoincrement())
  title String
  shortBody String @default("") @db.VarChar(100)
  body String @default("") @db.VarChar(1000)
  published Boolean @default(false)
  created_at DateTime @default(now())
  creator User @relation(references: [id], fields: [creator_id])
  creator_id Int
}